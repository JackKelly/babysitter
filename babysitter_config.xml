<config>

    <!-- ******************* DISK SPACE ************************* -->
    <disk_space>
        <threshold>200</threshold>   <!-- MBytes -->
        <mount_point>/</mount_point>
    </disk_space>

    <!-- ********************** FILES ***************************
    Add as many <file> blocks as required.
    Each block checks that its file is updated within <timeout>.
    This is useful for checking that data log files are being updated
    as expected. -->
    
    <powerdata>
        <dir>$DATA_DIR</dir>
        <numeric_subdirs>True</numeric_subdirs>
        <timeout>300</timeout>
    </powerdata>
        

    <!-- ********************* PROCESSES ************************
    Add as many <process> blocks are required.
    The <name> must be the precise name of the process.
    The <restart_command> is optional.                            -->
    
    <process>
        <name>rfm_ecomanager_logger.py</name>
        <restart_command>nohup /usr/local/logging/rfm_ecomanager_logger/rfm_ecomanager_logger/rfm_ecomanager_logger.py</restart_command>
    </process>
    
<!--
    <process>
        <name>ntpd</name>
        <restart_command>sudo service ntp restart</restart_command>
    </process>
-->

    <!-- *************** CHECK IF A FILE GROWS ******************
    FILEGROWS can be used to keep tabs on error log files.
    If the file grows then state == FAIL. -->
    
<!--
    <filegrows>cron.log</filegrows>
-->

    <!-- *************** HEART BEAT ***************************-->
    <heartbeat>
        <hour>6</hour> <!-- The hour to send the heart beat each day -->
        <cmd>/usr/local/logging/powerstats/powerstats/powerstats.py --html-dir /usr/local/logging/powerstats/html/ --cache</cmd> <!-- The command to generate an HTML report (optional) -->
        <html_file>/usr/local/logging/powerstats/html/index.html</html_file> <!-- The HTML file to send. All images will be attached. -->
    </heartbeat>

</config>
